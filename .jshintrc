{
    "node": true,
    "browser": true,
    "esnext": true,
    "bitwise": true,
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "immed": true,
    "indent": 4,
    "latedef": true,
    "newcap": true,
    "noarg": true,
    "quotmark": "single",
    "regexp": true,
    "undef": true,
    "unused": true,
    "strict": true,
    "trailing": true,
    "smarttabs": true,
    "laxbreak": true,
    "globals": {
        "angular": false
    },
    "predef": [ // pre-defined globals that are use commonly
        "$" // -- jQuery library
        , "Highcharts" // -- Highcharts
        , "prettyPrint"
        , "define" // -- requirejs
        , "require" // -- requirejs
        , "should" // -- BDD unit tests
        , "describe" // -- BDD unit tests
        , "it" // -- BDD unit tests
        , "after" // -- BDD unit tests
        , "afterEach" // -- BDD unit tests
        , "before" // -- BDD unit tests
        , "beforeEach" // -- BDD unit tests
    ]
}
